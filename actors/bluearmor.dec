  height 32
  scale 1.5
	painchance 128
  damage (random(10, 20))
	obituary "%o was fucked up by a Blue Armor."
  bloodtype "BlueArmorChunkSmall"
  +BRIGHT
  -MISSILEMORE
	states
	{
		Spawn:
			ARM2 AB 12
      loop
		See:
			ARM2 AABB 3 A_Chase
			loop
		Missile:
			ARM2 A 10
      ARM2 B 3 A_SkullAttack
      ARM2 AB 3
