  scale 0.25
  radius 3
  height 4
  reactiontime 70
  bouncetype Doom
  PROJECTILE
  -NOGRAVITY
  -ACTIVATEPCROSS
  +BRIGHT
  +CANNOTPUSH
  +BOUNCEONACTORS
  states {
    Spawn:
      BRMR ABCDEFGH 1 A_Countdown
      loop
    Death:
      BRMR ABCDEFGHA 1 A_FadeOut(0.1)
      stop
  }
}

